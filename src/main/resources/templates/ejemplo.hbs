<html>
<head>
  <meta charset="utf-8" />
  <link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
    integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
    crossorigin="anonymous">
    <link rel="stylesheet"
      href="/styles/ejemplo.css">
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">

          <a class="navbar-brand" href="#">
            Evaluando
          </a>
        </div>
        <div style="padding-right:30px">
          <button type="button" class="btn btn-default navbar-btn navbar-right"
            id="butSalir">
            Salir
          </button>
        </div>
      </div>
    </nav>
    <div class="row" >
      <div class="col-md-3">
        <!-- Menu -->
        <ul class="nav nav-pills nav-stacked">
          <li role="presentation" class="active"><a href="#">Evaluaciones</a></li>
          <li role="presentation"><a href="parametros.html">Parámetros</a></li>
        </ul>
        <div id="divImagen">
            
          <img src="/images/logo.png"  />
          
        </div>
        

        <!-- Fin Menu -->
      </div>
      <div class="col-md-9" id="main">
      <!-- Contenido -->

        <!-- Breadcumbs -->
        <ol class="breadcrumb">
          <li class="active"><a href="#">Evaluaciones</a></li>
        </ol>
        <!-- Fin Breadcumbs -->

        <!-- Listado de Evaluaciones -->
        <form class="form-inline">
          <div class="form-group">
            <label for="termFilter">Ciclo:</label>
            <select class="form-control">
              <option value="2015-2">
                Todos
              </option>
              <option value="2015-2">
                2015-2
              </option>
              <option value="2016-1">
                2016-1
              </option>
            </select>
          </div>
          <input class="btn btn-primary" type="button" value="Nuevo" data-toggle="modal" data-target="#modalAddEvaluation"/>
        </form>
        
        <!-- Listado de Evaluaciones -->

      <!-- Fin Contenido -->
      </div>

      <!-- Modal de nueva evaluacion -->
      <div class="modal fade" tabindex="-1" role="dialog" id="modalAddEvaluation">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">Agregar Evaluación</h4>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group">
                  <label for="name" class="col-sm-4 control-label">Nombre Evaluación :</label>
                  <div class="col-sm-8">
                    <input type="text" class="form-control" id="name" >
                  </div>
                </div>
                <div class="form-group">
                  <label for="term" class="col-sm-4 control-label">Ciclo :</label>
                  <div class="col-sm-8">
                    <select class="form-control">
                      <option value="2">2016-1</option>
                      <option value="1">2015-2</option>
                    </select>
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
              <button type="button" class="btn btn-primary">Guardar</button>
            </div>
          </div><!-- /.modal-content -->
        </div>
      </div>
      <!-- Fin Modal de nueva evaluacion -->
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
    integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
    crossorigin="anonymous"></script>
  <script src="/js/ejemplo.js"></script>
</body>
</html>
